        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/mainActivityRec"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>


</LinearLayout>
